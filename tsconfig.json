{
  "compilerOptions": {
    "target": "es6",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "suppressImplicitAnyIndexErrors": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "typeRoots": ["@types/typings.d.ts", "./node_modules/riot-framework/@types/index.d.ts"]
  }
}